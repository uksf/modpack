{
    // Files
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.ext": "sqf",
        "*.hpp": "cpp",
        "array": "cpp",
        "xutility": "cpp",
        "xlocale": "cpp",
        "functional": "cpp",
        "bitset": "cpp",
        "ios": "cpp",
        "future": "cpp",
        "system_error": "cpp",
        "vector": "cpp",
        "deque": "cpp",
        "initializer_list": "cpp",
        "list": "cpp",
        "queue": "cpp",
        "stack": "cpp",
        "type_traits": "cpp",
        "xhash": "cpp",
        "xstring": "cpp",
        "xtree": "cpp"
    },

    // Git
    "git.confirmSync": false,

    // Languages
    "[c]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "[cpp]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },

    "[sqf]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.detectIndentation": true,
        "editor.trimAutoWhitespace": true,
        "editor.autoClosingBrackets": "always"
    },
    "sqf.enableCBA": true,
    "sqf.enableACE3": true,
    "sqf.maxNumberOfProblems": 1000,
    "sqflint.checkPaths": false,
    "sqflint.indexWorkspace": false,
    "sqflint.indexWorkspaceTwice": false,
    "sqflint.warnings": false,
    "sqflint.includePrefixes": {
        "\\u\\": "P:/u",
        "\\x\\": "P:/x",
        "\\z\\": "P:/z"
    }
}
